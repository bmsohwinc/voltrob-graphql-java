schema {
    query : Query
    mutation : Mutation
}

type Query {
    bookById(id : ID) : Book
    allBooks : [Book!]!
}

type Book {
    id : ID
    name : String
    pageCount : Int
    author : Author
}

type Author {
    id : ID
    firstName : String
    lastName : String
    books : [Book]
}

type Mutation {
    addNewBook(authorId: String!, bookName: String!, pageCount: Int!) : Book
}